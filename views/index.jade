extends layout

block content
  form(action="/addShipment" method="post")
    .form-group
      label(for='orderNumber') Order Number
      input#orderNumber.form-control(name="orderNumber" placeholder="Order Number" required)
    .form-group
      label(for='qrcode') QR Code
      input#qrcode.form-control(name="qrCode" placeholder="QR Code" required)
    .form-group
      label(for='quantity') Quantity
      input#quantity.form-control(name="qty" placeholder="Quantity" value='0' required)
    button.btn.btn-primary(type='submit') Submit
